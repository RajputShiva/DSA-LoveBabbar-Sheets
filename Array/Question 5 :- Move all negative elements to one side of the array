


--------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Example :-
Input : 
N = 8
arr[] = {1, -1, 3, 2, -7, -5, 11, 6 }
Output : 
1  3  2  11  6  -1  -7  -5

--------------------------------------------------------------------------------------------------------------------------------------------------------------------------

public void segregateElements(int arr[], int n)
    {
        // Your code goes here
        if(n==0 || n==1)
        return;
        int []ans=new int[n];
        int i=0;
        for(int j=0;j<n;j++)
        {
            if(arr[j]>=0){
                ans[i]=arr[j];
                i++;
            }
        }
        for(int j=0;j<n;j++){
            if(arr[j]<0){
                ans[i]=arr[j];
                i++;
            }
        }
        //Arrays.sort(ans);
        for(int j=0;j<n;j++)
        {
            arr[j]=ans[j];
        }
    }
